<h1>Adicionar Programas de TV</h1>

<table class="table">
 <thead>
   <tr>
     <th>Programa</th>
     <th>Estilo</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @items.each do |item| %>
     <tr>
       <td><%= item.description %></td>
       <td><%= item.group ? item.group.name: '' %></td>
       <td><%= link_to 'Mais Informacoes', item %></td>
       <td><%= link_to 'Editar', edit_item_path(item) %></td>
       <td><%= link_to 'Apagar', item, method: :delete, data: { confirm: 'Voce tem certeza?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to 'Novo programa', new_item_path, class: 'btn btn-primary' %>